    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add a movie to your list</h5>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.association :movie, collection: Movie.all.order(:title), prompt: 'Select a movie', input_html: { class: 'select2' } %>
          <%= f.input :comment, placeholder: 'Enter a comment about the movie' %>
      </div>
      <div class="modal-footer">
          <%= f.submit 'Add movie', class: 'btn btn-flat' %>
        <% end %>
        <%= link_to "Back", list_path(@list) %>
      </div>
    </div>
