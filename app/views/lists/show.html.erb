<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <%= @list.name %>
</div>
<%= link_to "Edit this list", edit_list_path(@list), class: "btn btn-gradient" %>
<%= link_to "Destroy this list", @list, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-gradient" %>
<%= link_to "add a Movie", new_list_bookmark_path(@list), class: "btn btn-gradient" %>
<div class="container">
<div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip">
      <img src=<%= bookmark.movie[:poster_url] %> alt=""<%= bookmark.movie[:title] %>>
      <div class="card-trip-infos">
        <div>
          <h2><%= bookmark.movie[:title] %> - <%= bookmark.movie[:rating] %></h2>
          <p><%= bookmark.movie[:overview] %></p>
          <p>âœ”<%= bookmark.comment %></p>
        </div>
        <%= link_to "Delete", list_destroy_bookmark_path(bookmark.id), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    </div>

  <% end %>
</div>
</div>
<%= link_to "Back", lists_path, class: "btn btn-gradient" %>
